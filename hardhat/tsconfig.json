{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": { "@/*": ["./*"] },
    "types": [
      "mocha"
    ]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./scripts", "./test", "./typechain-types", "./frontend"],
  "files": ["./hardhat.config.ts"]
}
